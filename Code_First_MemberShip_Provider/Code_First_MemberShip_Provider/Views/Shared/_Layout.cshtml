<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Cyber Center Dhaka University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        footer {
            width: 100%;
            height: auto;
            background: black;
            float: left;
            margin: 0 0 .5% 0;
            border: 10px;
            box-shadow: 5px 5px 10px #202020;
        }
    </style>
</head>
<body style="font-family:'Times New Roman', Times, serif">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Human Resource Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @{
                            if (User.Identity.IsAuthenticated)
                            {
                              
                                if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("User"))
                                {
                                    if (Roles.IsUserInRole(User.Identity.Name, "Admin"))
                                    {
                                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                                        <li>@Html.ActionLink("Faculties", "GetAllFacultyBasicDetails", "AdminPanel")</li>
                                        <li>@Html.ActionLink("Contacts", "GetAllFacultyContactInfo", "AdminPanel")</li>

                                }
                                if (Roles.IsUserInRole(User.Identity.Name, "User"))
                                {
                                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Update Profile<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Basic Information", "Edit", "Faculties")</li>
                                            <li>@Html.ActionLink("Contact Information", "Edit", "ContactInformations")</li>
                                            <li>@Html.ActionLink("Educational Information", "Edit", "EducationalInformations")</li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">View Profile<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Basic Information", "Details", "Faculties")</li>
                                            <li>@Html.ActionLink("Contact Information", "Details", "ContactInformations")</li>
                                            <li>@Html.ActionLink("Educational Information", "Details", "EducationalInformations")</li>
                                        </ul>
                                    </li>
                                }
                            }

                            <li>@Html.ActionLink("Log Out", "LogOff", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink(" Log in", "LogOn", "Account")</li>


                        }

                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content" style="font-family:'Times New Roman', Times, serif">
        @RenderBody()
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div>
        <footer align="center" class="navbar navbar-inverse navbar-fixed-bottom">
            <p align="center">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <span style="color:white " align="center"><strong style="font-size:medium">Logged in as:&nbsp;@User.Identity.Name</strong></span>
                    }

                }
            </p>
            <p style="color:white " align="center">
                <strong> &copy; @DateTime.Now.Year - United International University, All rights reserved</strong>
                <br />
                <strong>Powered by Department of CSE</strong><br />
                <strong>Developed by Akash Bhuyiya (CSE-)<sup>th</sup> Batch ( 007 )</strong>
            </p>
        </footer>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>